<Window x:Class="CafeGuide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CafeGuide"
        mc:Ignorable="d"
        Title="Cafe Guide" MaxHeight="350" MaxWidth="525" Height="350" Width="525">
    <Grid Margin="0,0,2,-3">
        <Grid.Background>
            <ImageBrush ImageSource="Resources/1.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="130*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="223*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*" />
            <RowDefinition Height="86*"/>
            <RowDefinition Height="27*" />
            <RowDefinition Height="36*" />
            <RowDefinition Height="23*"/>
            <RowDefinition Height="84*" />
            <RowDefinition Height="66*" />
        </Grid.RowDefinitions>
        <Image Stretch="UniformToFill" Source="Resources/1.png" Margin="0,0,0,62" Grid.RowSpan="2" />
        <TextBox x:Name="textBoxName" Grid.Row="3" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="277" FontFamily="Segoe Print" FontSize="14.667" BorderBrush="#FF191916" Margin="0,1,0,0" Grid.Column="1" Grid.ColumnSpan="3"/>
        <ComboBox x:Name="comboBoxCuisine" HorizontalAlignment="Left" Margin="2,5,0,0" VerticalAlignment="Top" Width="144" Height="25" FontFamily="Segoe Print" FontSize="13.333" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2"/>
        <TextBox x:Name="textBoxAverageCheck" HorizontalAlignment="Left" Height="25" Margin="0,5,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="99" FontFamily="Segoe Print" FontSize="13.333" Grid.Row="5" Grid.Column="1" BorderBrush="Black"/>
        <CheckBox x:Name="checkBoxWiFi" Content="Wi-Fi" HorizontalAlignment="Left" Margin="145,4,0,0" VerticalAlignment="Top" Height="22" FontFamily="Segoe Print" Width="54" Grid.Row="5" Grid.Column="4" FontWeight="Bold"/>
        <ComboBox x:Name="comboBoxMeansOfTransport" HorizontalAlignment="Left" Margin="3,5,0,0" VerticalAlignment="Top" Width="121" FontFamily="Segoe Print" FontSize="13.333" Height="25" Grid.Row="5" Grid.Column="4"/>
        <Button x:Name="buttonSearch" Content="SEARCH" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Height="23" FontFamily="Segoe Print" Background="White" Click="buttonSearch_Click" BorderBrush="White" Grid.Row="6" Grid.Column="1" FontWeight="Bold"/>
        <Label x:Name="label" Grid.Row="1" Content="Cafe Guide" HorizontalAlignment="Left" Margin="0,-2,0,0" VerticalAlignment="Top" Width="189" FontStyle="Italic" FontFamily="Segoe Print" FontSize="32" Height="66" Grid.Column="3" Grid.ColumnSpan="2"/>
        <Label x:Name="label1" Grid.Row="2" Content="Enter a name " HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="170" FontFamily="Segoe Print" Grid.Column="1" Grid.ColumnSpan="3" FontWeight="Bold"/>
        <Label x:Name="label2" Content="Type" HorizontalAlignment="Left" Margin="3,1,0,0" VerticalAlignment="Top" Width="43" FontFamily="Segoe Print" Height="31" Grid.Row="2" Grid.Column="4" FontWeight="Bold" Grid.RowSpan="2"/>
        <Label x:Name="label2_Copy" Content="Average Check" HorizontalAlignment="Left" VerticalAlignment="Top" Width="99" FontFamily="Segoe Print" Height="31" Grid.Row="4" Grid.Column="1" FontWeight="Bold" Grid.RowSpan="2"/>
        <Label x:Name="label3" Content="Cuisine" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Top" FontFamily="Segoe Print" Height="31" Width="53" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" FontWeight="Bold" Grid.RowSpan="2"/>
        <Label x:Name="label4" Content="How to get" HorizontalAlignment="Left" Margin="3,0,0,0" VerticalAlignment="Top" Width="138" FontFamily="Segoe Print" Height="31" Grid.Row="4" Grid.Column="4" Foreground="Black" FontWeight="Bold" Grid.RowSpan="2"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="101,5,0,0" Grid.Row="5" TextWrapping="Wrap" Text="rub" VerticalAlignment="Top" FontFamily="Segoe Print" Grid.Column="1" Height="21" Width="21"/>
        <ComboBox x:Name="comboBoxType" Grid.Column="4" HorizontalAlignment="Left" Margin="10,1,0,0" Grid.Row="3" VerticalAlignment="Top" Width="189" Height="25" FontFamily="Segoe Print" FontSize="14.667"/>




    </Grid>
</Window>
