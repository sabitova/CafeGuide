<Window x:Class="CafeGuide.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CafeGuide"
        mc:Ignorable="d"
        Title="Cafe Guide" MaxHeight="425" MaxWidth="300" Height="425" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="104*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="217*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="Cafe Guide" HorizontalAlignment="Left" VerticalAlignment="Top" Width="170" FontStyle="Italic" FontFamily="Segoe Print" FontSize="26.667" Height="57" Margin="59,0,0,0" Grid.RowSpan="2"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" Grid.Row="2"/>
        <Grid Grid.RowSpan="4">
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,112,0,0" TextWrapping="Wrap" Text="Enter your location" VerticalAlignment="Top" FontFamily="Segoe Print" FontSize="10.667"/>
            <Button x:Name="button_OnFoot" Content="On foot" HorizontalAlignment="Left" Margin="101,188,0,0" VerticalAlignment="Top" Width="74" Height="63" Click="button_OnFoot_Click"/>
            <Button x:Name="button_PublicTransport" Content="Public&#xD;&#xA;Transport&#xD;&#xA;" HorizontalAlignment="Left" Margin="193,188,0,0" VerticalAlignment="Top" Width="74" Height="63" Click="button_PublicTransport_Click"/>
            <Button x:Name="button_Car" Content="Car" HorizontalAlignment="Left" Margin="10,188,0,0" VerticalAlignment="Top" Width="74" Height="63" Click="button_Car_Click"/>

        </Grid>

    </Grid>
</Window>
